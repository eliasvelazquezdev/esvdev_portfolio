---
import BaseLayout from "../layouts/BaseLayout.astro";
import Aside from "../components/Aside.astro";
import Navigation from "../components/Navigation.astro";

const pageTitle = "Inicio" 
---

<BaseLayout pageTitle={pageTitle}>
    <div class="flex-row md:flex-row grid grid-cols-12 gap-4">    
        <Aside />

        
        <main class="lg:col-span-9 col-span-12"> 
            <Navigation />
            
            <section class="p-3 lg:p-8 border rounded lg:min-h-screen">

                <div id="parent-div" hx-get="/partials/welcome/" hx-trigger="load"></div>
              
            </section>
        </main>
    </div>

</BaseLayout>