---
import { getAbsoluteLocaleUrl, getAbsoluteLocaleUrlList } from 'astro:i18n';

const url = Astro.url.pathname;

---
<nav class="nav-links">
  <ul class="nav-tabs flex flex-wrap text-sm font-medium text-center text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400">
    <li class="me-2 nav-item">
        <a  href="" 
            aria-current="page" 
            class="inline-block p-4 rounded-t-lg active text-blue-600 bg-gray-100 hover:text-gray-600 hover:bg-gray-50"
            hx-get={
              url == '/es' ? getAbsoluteLocaleUrl("es", "welcome", {
                            prependWith: "partials"
                          })
              :
              "/partials/welcome"
            }
            hx-trigger="click"
            hx-target="#parent-div"
            hx-swap="innerHTML transition:true"
        >
          {url == '/es' ? 'Inicio' : 'Home'}
        </a>
    </li>

    <li class="me-2 nav-item">
        <a  href="" 
            aria-current="page" 
            class="inline-block p-4 rounded-t-lg hover:text-gray-600 hover:bg-gray-50"
            hx-get={
              url == '/es' ? getAbsoluteLocaleUrl("es", "projects", {
                            prependWith: "partials"
                          })
              :
              "/partials/projects"
            }
            hx-trigger="click"
            hx-target="#parent-div"
            hx-swap="innerHTML transition:true"
        >
        {url == '/es' ? 'Proyectos' : 'Projects'}
        </a>
    </li>

    <li class="me-2 nav-item">
        <a  href="" 
            aria-current="page" 
            class="inline-block p-4 rounded-t-lg hover:text-gray-600 hover:bg-gray-50"
            hx-get={
              url == '/es' ? getAbsoluteLocaleUrl("es", "education", {
                            prependWith: "partials"
                          })
              :
              "/partials/education"
            }
            hx-trigger="click"
            hx-target="#parent-div"
            hx-swap="innerHTML transition:true"
        >
        {url == '/es' ? 'Educación' : 'Education'}
        </a>
    </li>

    <li class="me-2 nav-item">
        <a  href="" 
            aria-current="page" 
            class="inline-block p-4 rounded-t-lg hover:text-gray-600 hover:bg-gray-50"
            hx-get={
              url == '/es' ? getAbsoluteLocaleUrl("es", "about", {
                            prependWith: "partials"
                          })
              :
              "/partials/about"
            }
            hx-trigger="click"
            hx-target="#parent-div"
            hx-swap="innerHTML transition:true"
        >
        {url == '/es' ? 'Sobre mí' : 'About'}
        </a>
    </li>

    <li class="me-2 nav-item">
      <a  href="" 
          aria-current="page" 
          class="inline-block p-4 rounded-t-lg hover:text-gray-600 hover:bg-gray-50"
          hx-get={
            url == '/es' ? getAbsoluteLocaleUrl("es", "contact", {
                          prependWith: "partials"
                        })
            :
            "/partials/contact"
          }
          hx-trigger="click"
          hx-target="#parent-div"
          hx-swap="innerHTML transition:true"
      >
      {url == '/es' ? 'Contacto' : 'Contact'}
      </a>
    </li>
  </ul>

</nav>